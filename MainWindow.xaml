<Window x:Class="SprayMaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:SprayMaster" xmlns:local11="clr-namespace:SprayMaster.Helpers"
        mc:Ignorable="d"
        Title="Spray Master" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">
    <Window.Resources>
        <local11:ColorToBrushConverter x:Key="ColorConverter"/>
    </Window.Resources>
    <Border Background="White" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>

            <!-- Top Control Bar -->
            <Border Background="Black" CornerRadius="10,10,0,0">
                <StackPanel x:Name="pnlControlBar"
            Grid.Row="0"
            Orientation="Horizontal"
            FlowDirection="RightToLeft"
            Background="Transparent"
            Margin="0,0,5,0"
            MouseLeftButtonDown="panelControlBar_MouseLeftButtonDown"
            MouseEnter="panelnlControlBar_MouseEnter">
                    <Button x:Name="btnClose" Content="X"  Background="Red" Width="20" Height="20" Margin="0,0,2,0" Click="btnClose_Click"/>
                    <Button x:Name="btnMaximize" Content="O" Background="WhiteSmoke" Width="20" Height="20" Margin="0,0,2,0" Click="btnMaximize_Click"/>
                    <Button x:Name="btnMinimize" Content="-" Background="Gray" Width="20" Height="20" Margin="0,0,2,0" Click="btnMinimize_Click"/>
                </StackPanel>
            </Border>

            <!-- Menu Bar -->
            <DockPanel Grid.Row="1" Background="#E0E0E0">
                <Menu DockPanel.Dock="Left" Background="Transparent" VerticalAlignment="Center" Margin="5,0,0,0">
                    <MenuItem Header="File" FontSize="15">
                        <MenuItem Header="Open" Command="{Binding LoadImageCommand}"/>
                        <MenuItem Header="Save" Command="{Binding SaveImageCommand}"/>
                        <MenuItem Header="Save As" Command="{Binding SaveImageAsyncCommand}"/>
                        <Separator/>
                        <MenuItem Header="Exit" Click="btnClose_Click"/>
                    </MenuItem>
                    <MenuItem Header="Edit" FontSize="15">
                        <MenuItem Header="Undo"/>
                        <Separator/>
                        <MenuItem Header="Clear All"/>
                    </MenuItem>
                </Menu>
            </DockPanel>

            <!-- Main Content -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <!-- Image Canvas Area -->
                <Grid Grid.Column="0">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                        <Canvas x:Name="imageCanvas" Background="White" ClipToBounds="True"
        MouseLeftButtonDown="Canvas_MouseDown"
        MouseMove="Canvas_MouseMove" 
        MouseLeftButtonUp="Canvas_MouseUp">
                            <Image Source="{Binding CurrentImage}" 
           Canvas.Left="{Binding ImageLeft}"
           Canvas.Top="{Binding ImageTop}">
                                <Image.LayoutTransform>
                                    <ScaleTransform ScaleX="{Binding ZoomLevel}" ScaleY="{Binding ZoomLevel}"/>
                                </Image.LayoutTransform>
                            </Image>
                            <Image x:Name="drawingLayer"/>
                        </Canvas>
                    </ScrollViewer>
                </Grid>
                
                <!-- Tools Panel -->
                <StackPanel Grid.Column="1" Background="#E8E8E8" Margin="0,5,5,5">
                    <GroupBox Header="Brush" Margin="5" BorderBrush="Gray">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="pencil" FontSize="8" FontWeight="DemiBold" Height="30" Width="30" Margin="5"/>
                            <Button Content="Brush" FontSize="8" FontWeight="DemiBold" Height="30" Width="30" Margin="5"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <GroupBox Header="Tools" Margin="5" BorderBrush="Gray">
                        <StackPanel>
                            <Button Content="Spray Paint" FontWeight="DemiBold" Height="30" Margin="5"/>
                            <Button Content="Eraser" FontWeight="DemiBold" Height="30" Margin="5"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="Color" Margin="5" BorderBrush="Gray">
                        <StackPanel>
                            <ComboBox ItemsSource="{Binding ToolManager.Colors}" 
          SelectedValue="{Binding ToolManager.SelectedColor}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Rectangle Width="20" Height="20">
                                                <Rectangle.Fill>
                                                    <SolidColorBrush Color="{Binding}"/>
                                                </Rectangle.Fill>
                                            </Rectangle>
                                            <TextBlock Text="{Binding}" Margin="5,0,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>
                    </GroupBox>

                    <!-- Brush Sliders -->
                    <GroupBox Header="Brush Size +/-" Margin="5" BorderBrush="Gray">
                        <Slider Minimum="5" Maximum="50" Value="{Binding ToolManager.BrushSize}" Margin="5"/>
                    </GroupBox>

                    <GroupBox Header="Spray Density +/-" Margin="5" BorderBrush="Gray">
                        <Slider Minimum="0" Maximum="100" Value="{Binding ToolManager.Opacity}" Margin="5"/>
                    </GroupBox>

                    <GroupBox Header="Zoom +/-" BorderBrush="Gray">
                        <Slider Minimum="0.1" Maximum="5" Value="{Binding ZoomLevel}" 
                VerticalAlignment="Bottom" Margin="10" Width="200"/>
                    </GroupBox>
                </StackPanel>
            </Grid>

            <!-- Status Bar -->
            <StatusBar Grid.Row="3" Background="#E0E0E0">
                <StatusBarItem>
                    <TextBlock>
   <Run Text="Image: "/>
   <Run Text="{Binding ImageName, FallbackValue='None'}"/>
   <Run Text=" | Format: "/>
   <Run Text="{Binding ImageFormat, FallbackValue='--'}"/>
<Run Text=" | Size: "/>
<Run>
   <Run.Text>
       <MultiBinding StringFormat="{}{0}x{1}">
<Binding Path="ImageWidth" FallbackValue="0"/>
<Binding Path="ImageHeight" FallbackValue="0"/>
       </MultiBinding>
   </Run.Text>
</Run>
                    </TextBlock>
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </Border>
</Window>